#!/bin/bash
# operation system and dictionary

echo "what is cp"
whatis cp
echo "what is mv"
whatis mv
echo "what is mkdir"
whatis mkdir
echo "what is rm"
whatis rm
echo "what is ln"
whatis ln

echo "Now we can have a try"
echo "Make a new dir named playground"
mkdir playground
cd playground
echo "Now we are in playground"
pwd

echo "We can make some new file and new dir"
touch 1 2 3 
ls
mkdir fun
ls

echo "cp [item1] [item2]"
echo "cp item... directory"
echo "cp 1 4"
cp 1 4
ls
echo "cp 1 fun"
cp 1 fun
ls fun
echo "cp ./* fun -u -v"
cp ./* fun -u -v
ls fun


echo "mv item1 item2"
echo "mv item... directory"
echo "mv 1 11"
mv 1 11
ls
echo "mv fun funfun"
mv fun funfun
ls 
ls funfun

echo "rm -r funfun"
rm -r funfun
echo "-f --forse(ignore"

ls -l > 11

echo "ln"
echo "ln 11 1"
ln 11 1
ls -l
echo "ln -s 11 10"
ln -s 11 10 
ls -l


echo "-a --archive(755"
echo "-i --interactive(y/n"
echo "-r --recursive(dir"
echo "-u --update("
echo "-v --verbose(more info"


echo "Now we are tired and Bye-bye"
cd ../
rm -r playground

