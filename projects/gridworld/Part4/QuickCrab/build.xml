<?xml version="1.0" encoding="utf-8"?>
<!--Ok, Now I learn To use xml and ant -->
<!--project
    name    : name
    default : default run target (must)
    basedir : default is local dir-->
<project name="HelloWorld" default="info">
    <property file="build.properties"/>

    <path id="classpath">
        <pathelement location="${lib.dir}/gridworld.jar"/>
        <pathelement location="${lib.dir}/junit-4.9.jar"/>
    </path>

    <!--target
        name    : name (must)
        depends : use ',' between many depends
        description : like name
        if      : if not exits, Not Run
        unless  : if not exits, Run-->
    <target name="info">
        <echo>Hello World - Welcome to Apache Ant!</echo>
    </target>

    <target name="compile" description="compile app">
        <mkdir dir="${classes.dir}"/>
        <javac 
        classpathref="classpath"
        srcdir="${src.dir}" 
        destdir="${classes.dir}" 
        includeantruntime="false">
        </javac>
    </target>

    <target name="jar">
        <mkdir dir="${build.dir}"/>
        <jar 
        destfile="${build.dir}/${main-class}.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
                <attribute name="Class-Path" value="../lib/gridworld.jar"/>
            </manifest>
        </jar>
    </target>
    
    <target name="run" description="run app" depends="compile, jar">
        <java jar="${build.dir}/${main-class}.jar" fork="true">
        </java>
    </target>

    <target name="test-compile" description="compile tests" depends="compile, jar">
        <mkdir dir="${tests.dir}"/>
        <javac 
        srcdir="${test.dir}" 
        destdir="${tests.dir}" 
        includeantruntime="false">
            <classpath>
                <path refid="classpath"/>
                <pathelement location="${classes.dir}" />
            </classpath>
        </javac>
    </target>

    <target name="test" depends="test-compile">
        <junit printsummary="on" haltonfailure="yes" fork="true">
            <classpath>
                <path refid="classpath"/>
                <pathelement location="${tests.dir}" />
                <pathelement location="${classes.dir}"/>
            </classpath>
            <formatter type="brief" usefile="false" />
            <batchtest>
                <fileset dir="${test.dir}" includes="*.java"/>
            </batchtest>    
        </junit>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

</project>